@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(locations="/applicationContext.xml")
public class UserServiceTest {
	@Autowired
	UserService userService;
	List<User> users;
	
	@Before
	public void setUp(){
		users = Arrays.asList(
				new User("bbbb","b유저","p1",Level.BASIC,49,0),
				new User("jjjj","j유저","p1",Level.BASIC,50,0),
				new User("eeee","e유저","p1",Level.SILVER,60,29),
				new User("mmmm","m유저","p1",Level.SILVER,65,30),
				new User("gggg","g유저","p1",Level.GOLD,100,150)
				);
	}

}